<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Aparición gradual (desde muy pequeño hasta un poco más grande) -->
    <scale
        android:duration="800"
        android:fromXScale="0.1"
        android:fromYScale="0.1"
        android:toXScale="1.3"
        android:toYScale="1.3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <!-- Primer rebote hacia atrás -->
    <scale
        android:duration="300"
        android:startOffset="800"
        android:fromXScale="1.3"
        android:fromYScale="1.3"
        android:toXScale="0.9"
        android:toYScale="0.9"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:anim/overshoot_interpolator"/>

    <!-- Segundo rebote hacia adelante -->
    <scale
        android:duration="250"
        android:startOffset="1100"
        android:fromXScale="0.9"
        android:fromYScale="0.9"
        android:toXScale="1.1"
        android:toYScale="1.1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:anim/overshoot_interpolator"/>

    <!-- Último rebote, ajustando a tamaño normal -->
    <scale
        android:duration="200"
        android:startOffset="1350"
        android:fromXScale="1.1"
        android:fromYScale="1.1"
        android:toXScale="1.0"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:anim/decelerate_interpolator"/>
</set>
